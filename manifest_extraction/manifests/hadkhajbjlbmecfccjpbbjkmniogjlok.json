{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Spines now",
  "version": "0.5.3",
  "description": "Take notes, write ideas and assemble your study materials directly from any website with the Spines now button.",
  "homepage_url": "https://spines.me/",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "Spines now"
  },
  "background": {
    "scripts": [
      "js/browser-polyfill.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/browser-polyfill.min.js",
        "js/bookmarklet_content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/bookmarklet_content_script.js",
    "css/iframe.css",
    "js/iframe.js",
    "html/iframe.html"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S"
      }
    }
  }
}